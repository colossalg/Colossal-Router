{
    "name": "colossal/colossal-router",
    "type": "library",
    "description": "A simple router implementation utilizing the PSR-15 standardized interfaces.",
    "keywords": ["Router", "PSR-15"],
    "homepage": "https://github.com/colossalg/Colossal-Router",
    "license": "MIT",
    "authors": [
        {
            "name": "Angus Wylie",
            "homepage": "https://github.com/colossalg",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4": {"Colossal\\Routing\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Colossal\\Routing\\": "test/"}
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "require": {
        "php": "^8.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "colossal/colossal-http-message": "^2.0",
        "colossal/colossal-middleware-queue": "^1.0"
    }
}
